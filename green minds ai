        function getXPForLevel(level) {
            if (level === 1) return 0;
            return Math.floor(100 * Math.pow(1.15, level - 1));
        }

        // Game state
        let gameState = {
            apiKey: localStorage.getItem('gemini_api_key') || '',
            steps: parseInt(localStorage.getItem('steps')) || 0,
            recycled: parseInt(localStorage.getItem('recycled')) || 0,
            xp: parseInt(localStorage.getItem('xp')) || 0,
            level: parseInt(localStorage.getItem('level')) || 1,
            points: parseInt(localStorage.getItem('points')) || 0,
            unlockedAchievements: JSON.parse(localStorage.getItem('achievements')) || [],
            redeemedVouchers: JSON.parse(localStorage.getItem('vouchers')) || [],
            syncCount: parseInt(localStorage.getItem('syncCount')) || 0,
            daysActive: parseInt(localStorage.getItem('daysActive')) || 1,
            perfectRecycles: parseInt(localStorage.getItem('perfectRecycles')) || 0,
            theme: localStorage.getItem('theme') || 'default',
            startDate: localStorage.getItem('startDate') || new Date().toISOString(),
            googleUser: null,
            customAvatar: localStorage.getItem('customAvatar') || null, // User's chosen avatar override
            useCustomAvatar: localStorage.getItem('useCustomAvatar') === 'true' // Whether to use custom avatar
        };

        let selectedCategory = null;
        let currentImage = null;

        function signInWithGoogle() {
            const demoUser = {
                name: 'Demo User',
                email: 'demo@ecowalker.com',
                picture: 'https://via.placeholder.com/50'
            };
            
            gameState.googleUser = demoUser;
            localStorage.setItem('googleUser', JSON.stringify(demoUser));
            showMainApp();
        }

        function skipLogin() {
            showMainApp();
        }

        function showMainApp() {
            document.getElementById('loginScreen').classList.add('hidden');
            document.getElementById('mainApp').classList.remove('hidden');
            
            if (gameState.googleUser) {
                const userInfo = document.getElementById('userInfo');
                userInfo.style.display = 'flex';
                document.getElementById('userName').textContent = gameState.googleUser.name;
                document.getElementById('userEmail').textContent = gameState.googleUser.email;
                document.getElementById('userAvatar').src = gameState.googleUser.picture;
            }
            
            // Show privacy popup if this is first time
            const hasSeenPrivacy = localStorage.getItem('hasSeenPrivacy');
            if (!hasSeenPrivacy) {
                document.getElementById('privacyPopup').style.display = 'flex';
            }
            
            init();
        }

        function closePrivacyPopup() {
            document.getElementById('privacyPopup').style.display = 'none';
            localStorage.setItem('hasSeenPrivacy', 'true');
        }

        function logout() {
            localStorage.removeItem('googleUser');
            gameState.googleUser = null;
            location.reload();
        }

        function init() {
            const savedUser = localStorage.getItem('googleUser');
            if (savedUser) {
                gameState.googleUser = JSON.parse(savedUser);
            }
            
            changeTheme(gameState.theme, true);
            updateDisplay();
            renderAchievements();
            renderSponsors();
            renderVouchers();
        }

        function changeTheme(theme, skipSave = false) {
            document.body.setAttribute('data-theme', theme);
            document.querySelectorAll('.theme-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.dataset.theme === theme) {
                    btn.classList.add('active');
                }
            });
            
            if (!skipSave) {
                gameState.theme = theme;
                localStorage.setItem('theme', theme);
            }
        }

        function saveApiKey() {
            const apiKey = document.getElementById('apiKeyInput').value.trim();
            if (apiKey.startsWith('AIza')) {
                gameState.apiKey = apiKey;
                localStorage.setItem('gemini_api_key', apiKey);
                document.getElementById('apiSetup').style.display = 'none';
                alert('‚úÖ Gemini API Key saved successfully!');
            } else {
                alert('‚ùå Please enter a valid Google Gemini API key (starts with AIza)');
            }
        }

        function updateDisplay() {
            const currentStage = EVOLUTION_STAGES.find(s => s.level === gameState.level) || EVOLUTION_STAGES[0];
            const nextStage = EVOLUTION_STAGES.find(s => s.level === gameState.level + 1);
            
            // Determine which avatar to show
            let displayEmoji, displayName;
            if (gameState.useCustomAvatar && gameState.customAvatar) {
                displayEmoji = gameState.customAvatar;
                const avatarData = AVAILABLE_AVATARS.find(a => a.emoji === gameState.customAvatar);
                displayName = avatarData ? `${avatarData.name} (Custom)` : currentStage.name;
            } else {
                displayEmoji = currentStage.emoji;
                displayName = currentStage.name;
            }
            
            document.getElementById('characterSprite').textContent = displayEmoji;
            document.getElementById('characterName').textContent = displayName;
            document.getElementById('characterLevel').textContent = gameState.level;
            document.getElementById('stepsCount').textContent = gameState.steps.toLocaleString();
            document.getElementById('recycledCount').textContent = gameState.recycled;
            document.getElementById('totalXP').textContent = gameState.xp.toLocaleString();
            document.getElementById('pointsBalance').textContent = gameState.points.toLocaleString();
            
            if (nextStage) {
                document.getElementById('evolutionPath').textContent = 
                    `${currentStage.stage} ‚Üí Next: ${nextStage.name} at Level ${nextStage.level}`;
            } else {
                document.getElementById('evolutionPath').textContent = 
                    `${currentStage.stage} - Maximum Level Achieved!`;
            }
            
            const currentLevelXP = getXPForLevel(gameState.level);
            const nextLevelXP = getXPForLevel(gameState.level + 1);
            const xpInLevel = gameState.xp - currentLevelXP;
            const xpNeeded = nextLevelXP - currentLevelXP;
            
            const xpProgress = document.getElementById('xpProgress');
            if (gameState.level < 50) {
                const progress = (xpInLevel / xpNeeded) * 100;
                xpProgress.style.width = Math.min(progress, 100) + '%';
                xpProgress.textContent = `${xpInLevel.toLocaleString()} / ${xpNeeded.toLocaleString()} XP`;
            } else {
                xpProgress.style.width = '100%';
                xpProgress.textContent = 'MAX LEVEL!';
            }

            localStorage.setItem('steps', gameState.steps);
            localStorage.setItem('recycled', gameState.recycled);
            localStorage.setItem('xp', gameState.xp);
            localStorage.setItem('level', gameState.level);
            localStorage.setItem('points', gameState.points);
        }

        function addXP(amount) {
            const oldLevel = gameState.level;
            gameState.xp += amount;
            
            while (gameState.level < 50 && gameState.xp >= getXPForLevel(gameState.level + 1)) {
                gameState.level++;
            }
            
            if (gameState.level > oldLevel) {
                showLevelUp(oldLevel, gameState.level);
            }
            
            checkAchievements();
            updateDisplay();
        }

        function addPoints(amount) {
            gameState.points += amount;
            localStorage.setItem('points', gameState.points);
            updateDisplay();
        }

        function showLevelUp(oldLevel, newLevel) {
            const oldStage = EVOLUTION_STAGES.find(s => s.level === oldLevel);
            const newStage = EVOLUTION_STAGES.find(s => s.level === newLevel);
            
            document.getElementById('oldSprite').textContent = oldStage.emoji;
            document.getElementById('newSprite').textContent = newStage.emoji;
            document.getElementById('evolutionMessage').textContent = newStage.description;
            
            const animation = document.getElementById('evolutionAnimation');
            animation.style.display = 'flex';
            
            setTimeout(() => {
                animation.style.display = 'none';
                updateDisplay();
            }, 4000);
        }

        async function syncHealthData() {
            // Detect platform and show appropriate message
            const isIOS = /iPad|iPhone|iPod/.test(navigator.userAgent);
            const isAndroid = /Android/.test(navigator.userAgent);
            
            let platform = 'Google Fit / Apple Health';
            if (isIOS) {
                platform = 'Apple Health';
            } else if (isAndroid) {
                platform = 'Google Fit';
            }
            
            // In production, you would integrate with:
            // - Google Fit API: https://developers.google.com/fit
            // - Apple HealthKit via Capacitor or Cordova plugin
            // Example for iOS: https://github.com/ionic-team/capacitor-health
            
            // For now, simulate syncing with realistic step data
            const demoSteps = Math.floor(Math.random() * 8000) + 3000; // 3000-11000 steps
            gameState.steps += demoSteps;
            gameState.syncCount++;
            
            const xpGained = Math.floor(demoSteps / 10);
            const pointsGained = Math.floor(demoSteps / 20);
            
            addXP(xpGained);
            addPoints(pointsGained);
            
            alert(`‚úÖ Synced from ${platform}!\n\nüìä ${demoSteps.toLocaleString()} steps added\n‚≠ê +${xpGained} XP\nüí∞ +${pointsGained} EcoPoints`);
            
            localStorage.setItem('syncCount', gameState.syncCount);
        }

        function openRecycleModal() {
            document.getElementById('recycleModal').style.display = 'flex';
        }

        function closeRecycleModal() {
            document.getElementById('recycleModal').style.display = 'none';
            resetRecycleModal();
        }

        function resetRecycleModal() {
            document.getElementById('previewImage').classList.add('hidden');
            document.getElementById('imageInput').value = '';
            document.getElementById('verificationResult').innerHTML = '';
            selectedCategory = null;
            currentImage = null;
            document.querySelectorAll('.trash-category').forEach(cat => {
                cat.classList.remove('selected');
            });
            document.getElementById('verifyBtn').disabled = true;
        }

        function handleImageUpload(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    currentImage = e.target.result;
                    const preview = document.getElementById('previewImage');
                    preview.src = currentImage;
                    preview.classList.remove('hidden');
                    checkVerifyButton();
                };
                reader.readAsDataURL(file);
            }
        }

        function selectCategory(element) {
            document.querySelectorAll('.trash-category').forEach(cat => {
                cat.classList.remove('selected');
            });
            element.classList.add('selected');
            selectedCategory = element.dataset.category;
            checkVerifyButton();
        }

        function checkVerifyButton() {
            document.getElementById('verifyBtn').disabled = !(currentImage && selectedCategory);
        }

        async function verifyRecycling() {
            const btn = document.getElementById('verifyBtn');
            const resultDiv = document.getElementById('verificationResult');
            
            btn.disabled = true;
            resultDiv.innerHTML = '<div class="loading"><div class="spinner"></div><p>Analyzing your recycling...</p></div>';

            // Simulate AI processing time
            await new Promise(resolve => setTimeout(resolve, 1500));

            try {
                // Always approve! Generate random rewards
                const xpAwarded = Math.floor(Math.random() * 31) + 20; // 20-50 XP
                const pointsAwarded = Math.floor(Math.random() * 51) + 50; // 50-100 points
                const confidence = Math.floor(Math.random() * 16) + 85; // 85-100% confidence
                
                // Positive encouraging messages
                const messages = [
                    'Great job identifying recyclable materials!',
                    'Perfect! You\'re helping save the planet!',
                    'Excellent work! Keep up the eco-friendly habits!',
                    'Awesome! Your recycling skills are improving!',
                    'Well done! Every item counts!',
                    'Fantastic! You\'re making a real difference!',
                    'Amazing! Your eco-awareness is inspiring!',
                    'Outstanding! Keep being an environmental hero!'
                ];
                
                const randomMessage = messages[Math.floor(Math.random() * messages.length)];
                
                resultDiv.innerHTML = `
                    <div class="result success">
                        <h3>‚úÖ Correct!</h3>
                        <p><strong>+${xpAwarded} XP | +${pointsAwarded} EcoPoints</strong></p>
                        <p><strong>Confidence:</strong> ${confidence}%</p>
                        <p>${randomMessage}</p>
                    </div>
                `;
                
                gameState.recycled++;
                if (xpAwarded >= 45) {
                    gameState.perfectRecycles++;
                    localStorage.setItem('perfectRecycles', gameState.perfectRecycles);
                }
                addXP(xpAwarded);
                addPoints(pointsAwarded);
                
                setTimeout(() => {
                    closeRecycleModal();
                }, 2500);
                
            } catch (error) {
                console.error('Verification error:', error);
                resultDiv.innerHTML = `
                    <div class="result error">
                        <h3>‚ùå Something went wrong</h3>
                        <p>Please try again!</p>
                    </div>
                `;
            } finally {
                btn.disabled = false;
            }
        }

        function checkAchievements() {
            const data = {
                steps: gameState.steps,
                recycled: gameState.recycled,
                level: gameState.level,
                syncCount: gameState.syncCount,
                daysActive: gameState.daysActive,
                perfectRecycles: gameState.perfectRecycles
            };

            ACHIEVEMENTS.forEach(achievement => {
                if (!gameState.unlockedAchievements.includes(achievement.id) && achievement.condition(data)) {
                    gameState.unlockedAchievements.push(achievement.id);
                    localStorage.setItem('achievements', JSON.stringify(gameState.unlockedAchievements));
                    addPoints(achievement.points);
                    showAchievementUnlock(achievement);
                }
            });

            renderAchievements();
        }

        function renderAchievements() {
            const list = document.getElementById('achievementsList');
            list.innerHTML = ACHIEVEMENTS.map(achievement => {
                const unlocked = gameState.unlockedAchievements.includes(achievement.id);
                
                let progress = '';
                const data = {
                    steps: gameState.steps,
                    recycled: gameState.recycled,
                    level: gameState.level
                };
                
                if (!unlocked) {
                    if (achievement.desc.includes('Walk')) {
                        const match = achievement.desc.match(/(\d+,?\d*)/);
                        if (match) {
                            const target = parseInt(match[0].replace(',', ''));
                            progress = `<div class="achievement-progress">${gameState.steps.toLocaleString()} / ${target.toLocaleString()}</div>`;
                        }
                    } else if (achievement.desc.includes('Recycle')) {
                        const match = achievement.desc.match(/(\d+)/);
                        if (match) {
                            const target = parseInt(match[0]);
                            progress = `<div class="achievement-progress">${gameState.recycled} / ${target}</div>`;
                        }
                    } else if (achievement.desc.includes('level')) {
                        const match = achievement.desc.match(/(\d+)/);
                        if (match) {
                            const target = parseInt(match[0]);
                            progress = `<div class="achievement-progress">Level ${gameState.level} / ${target}</div>`;
                        }
                    }
                }
                
                return `
                    <div class="achievement ${unlocked ? 'unlocked' : ''}">
                        <div class="achievement-icon">${unlocked ? achievement.icon : 'üîí'}</div>
                        <div class="achievement-text">
                            <div class="achievement-title">${achievement.title}</div>
                            <div class="achievement-desc">${achievement.desc} ‚Ä¢ ${achievement.points} points</div>
                            ${progress}
                        </div>
                    </div>
                `;
            }).join('');

            document.getElementById('achievementsUnlocked').textContent = gameState.unlockedAchievements.length;
            document.getElementById('achievementsTotal').textContent = ACHIEVEMENTS.length;
        }

        function showAchievementUnlock(achievement) {
            setTimeout(() => {
                alert(`üéâ Achievement Unlocked!\n\n${achievement.icon} ${achievement.title}\n${achievement.desc}\n\n+${achievement.points} EcoPoints!`);
            }, 500);
        }

        function renderSponsors() {
            const list = document.getElementById('sponsorsList');
            list.innerHTML = SPONSORS.map(sponsor => {
                return `
                    <div class="sponsor-card">
                        <div class="sponsor-header">
                            <div class="sponsor-logo">${sponsor.logo}</div>
                            <div class="sponsor-info">
                                <div class="sponsor-name">${sponsor.name}</div>
                                <div class="sponsor-type">${sponsor.type}</div>
                            </div>
                        </div>
                        ${sponsor.offers.map(offer => `
                            <div class="sponsor-offer">
                                <div class="offer-text">${offer.description}</div>
                                <div class="offer-cost">
                                    <span class="points-cost">${offer.points} points</span>
                                    <button class="redeem-btn" 
                                            onclick="redeemOffer('${sponsor.id}', '${offer.id}')"
                                            ${gameState.points < offer.points ? 'disabled' : ''}>
                                        Redeem
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                `;
            }).join('');
        }

        function redeemOffer(sponsorId, offerId) {
            const sponsor = SPONSORS.find(s => s.id === sponsorId);
            const offer = sponsor.offers.find(o => o.id === offerId);
            
            if (gameState.points >= offer.points) {
                gameState.points -= offer.points;
                localStorage.setItem('points', gameState.points);
                
                const voucher = {
                    id: Date.now().toString(),
                    sponsorName: sponsor.name,
                    sponsorLogo: sponsor.logo,
                    description: offer.description,
                    code: offer.code,
                    redeemedDate: new Date().toISOString()
                };
                
                gameState.redeemedVouchers.push(voucher);
                localStorage.setItem('vouchers', JSON.stringify(gameState.redeemedVouchers));
                
                updateDisplay();
                renderSponsors();
                renderVouchers();
                
                alert(`üéâ Voucher Redeemed!\n\nYour code: ${offer.code}\n\nCheck "My Vouchers" tab to view and use it.`);
            }
        }

        function renderVouchers() {
            const list = document.getElementById('vouchersList');
            
            if (gameState.redeemedVouchers.length === 0) {
                list.innerHTML = '<p style="text-align: center; color: var(--text-secondary); padding: 40px;">No vouchers yet. Redeem rewards to get started!</p>';
                return;
            }
            
            list.innerHTML = gameState.redeemedVouchers.map(voucher => {
                const date = new Date(voucher.redeemedDate).toLocaleDateString();
                return `
                    <div class="voucher-item">
                        <div class="voucher-header">
                            <div>
                                <span style="font-size: 2em;">${voucher.sponsorLogo}</span>
                                <strong style="margin-left: 10px;">${voucher.sponsorName}</strong>
                            </div>
                            <span class="voucher-status">Active</span>
                        </div>
                        <div style="margin: 10px 0;">
                            <strong>${voucher.description}</strong>
                        </div>
                        <div class="coupon-code">${voucher.code}</div>
                        <div style="font-size: 0.85em; color: var(--text-secondary);">
                            Redeemed: ${date}
                        </div>
                    </div>
                `;
            }).join('');
        }

        function switchTab(tabName) {
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.target.classList.add('active');
            
            document.querySelectorAll('.tab-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById(tabName + 'Tab').classList.add('active');
        }

        function openAvatarModal() {
            renderAvatarGrid();
            document.getElementById('avatarModal').style.display = 'flex';
        }

        function closeAvatarModal() {
            document.getElementById('avatarModal').style.display = 'none';
        }

        function renderAvatarGrid() {
            const grid = document.getElementById('avatarGrid');
            const currentDisplayEmoji = gameState.useCustomAvatar && gameState.customAvatar ? 
                gameState.customAvatar : 
                EVOLUTION_STAGES.find(s => s.level === gameState.level)?.emoji || 'üå±';
            
            grid.innerHTML = AVAILABLE_AVATARS.map(avatar => {
                const isUnlocked = gameState.level >= avatar.unlockLevel;
                const isSelected = currentDisplayEmoji === avatar.emoji;
                return `
                    <div class="avatar-option ${isSelected ? 'selected' : ''} ${!isUnlocked ? 'locked' : ''}" 
                         onclick="${isUnlocked ? `selectAvatar('${avatar.emoji}')` : ''}"
                         title="${isUnlocked ? avatar.name : `Unlock at Level ${avatar.unlockLevel}`}">
                        ${isUnlocked ? avatar.emoji : 'üîí'}
                    </div>
                `;
            }).join('');
        }

        function selectAvatar(emoji) {
            gameState.customAvatar = emoji;
            gameState.useCustomAvatar = true;
            localStorage.setItem('customAvatar', emoji);
            localStorage.setItem('useCustomAvatar', 'true');
            updateDisplay();
            renderAvatarGrid();
        }

        window.onload = function() {
            const savedUser = localStorage.getItem('googleUser');
            if (savedUser) {
                gameState.googleUser = JSON.parse(savedUser);
                showMainApp();
            }
        };
    </script>
</body>
</html>
